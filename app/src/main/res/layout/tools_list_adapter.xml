<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/container">

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:srcCompat="@drawable/icon_ironfist"
        android:id="@+id/imageItem"
        android:paddingBottom="3dp"
        android:paddingTop="3dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Iron First"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:textSize="17dp"
        android:id="@+id/txtPrice"
        android:layout_toEndOf="@+id/imageItem"
        android:layout_marginStart="14dp"
        android:layout_alignParentTop="true" />

    <Button
        android:text="5"
        android:textSize="13dp"
        android:textColor="@color/colorWhite"
        android:id="@+id/btnBuy"
        android:background="@drawable/button_shape_circle"
        android:layout_marginEnd="11dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:textAllCaps="false"
        android:layout_width="23dp"
        android:layout_height="23dp" />

    <TextView
        android:text="Tool Information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorGray06"
        android:textSize="12dp"
        android:id="@+id/txtInfo"
        android:layout_below="@+id/txtPrice"
        android:layout_alignStart="@+id/txtPrice" />

</RelativeLayout>
